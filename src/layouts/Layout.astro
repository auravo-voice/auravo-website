---
export interface Props {
	title: string;
}

const { title } = Astro.props;
import Analytics from '@vercel/analytics/astro'
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="auravo — The premium, calming AI for future-focused minds. Powered by next-generation technology to elevate your voice, presence, and digital experience." />
		<meta name="keywords" content="auravo, AI voice, future tech, premium AI, calming technology, digital wellbeing" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/logo.png" />
		<meta name="generator" content={Astro.generator} />
		
		<!-- Open Graph / Facebook -->
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://auravo.com/" />
		<meta property="og:title" content="auravo — Premium Futuristic AI for a Calmer Digital World" />
		<meta property="og:description" content="Discover auravo, your AI-first companion designed for clarity, calm, and next-level connection. Intuitively crafted for a premium, serene experience." />
		<meta property="og:image" content="/og-image.jpg" />

		<!-- Twitter -->
		<meta property="twitter:card" content="summary_large_image" />
		<meta property="twitter:url" content="https://auravo.com/" />
		<meta property="twitter:title" content="auravo — Premium Futuristic AI for a Calmer Digital World" />
		<meta property="twitter:description" content="Step into the future with auravo: AI that soothes, inspires, and empowers mindful communication." />
		<meta property="twitter:image" content="/og-image.jpg" />

		<!-- Preconnect to Google Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@700;800;900&family=Space+Grotesk:wght@400;500;600;700&display=swap" rel="stylesheet">

		<style>
			:root {
				--bg-blur: 0px;
				--bg-opacity: 1;
				--bg-noise: 0.4;
			}
		</style>

		<title>{title}</title>
	</head>
	<body class="font-sans antialiased bg-neutral-950 text-neutral-100 overflow-x-hidden">
		<div class="fixed inset-0 bg-gradient-to-br from-neutral-950 via-neutral-900 to-neutral-950 pointer-events-none transition-all duration-300" style="filter: blur(var(--bg-blur, 0px)); opacity: var(--bg-opacity, 1);"></div>
		<div class="relative z-10">
			<slot />
		</div>
		<Analytics />
	</body>
</html>