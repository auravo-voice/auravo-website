<style>
	html {
		scroll-behavior: smooth;
	}
	
	/* Scroll-triggered fade animations */
	@keyframes fadeInOnScroll {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}
	
	/* Intersection Observer will add this class */
	.fade-in-on-scroll {
		opacity: 0;
		transform: translateY(30px);
		transition: opacity 0.8s ease-out, transform 0.8s ease-out;
	}
	
	.fade-in-on-scroll.visible {
		opacity: 1;
		transform: translateY(0);
	}
	
	/* Smooth wave animation */
	@keyframes wave {
		0%, 100% {
			transform: translateY(0px) rotate(0deg);
		}
		25% {
			transform: translateY(-10px) rotate(2deg);
		}
		50% {
			transform: translateY(-5px) rotate(0deg);
		}
		75% {
			transform: translateY(-15px) rotate(-2deg);
		}
	}
	
	/* Mascot animations */
	.mascot-container {
		position: relative;
		width: 200px;
		height: 200px;
		margin: 0 auto;
	}
	
	.mascot-body {
		position: relative;
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, rgba(59, 130, 246, 0.2), rgba(147, 51, 234, 0.2));
		border-radius: 50%;
		border: 3px solid rgba(59, 130, 246, 0.4);
		box-shadow: 
			0 0 30px rgba(59, 130, 246, 0.3),
			0 0 60px rgba(147, 51, 234, 0.2),
			inset 0 0 30px rgba(59, 130, 246, 0.1);
		animation: mascot-breathe 4s ease-in-out infinite;
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		overflow: visible;
	}
	
	@keyframes mascot-breathe {
		0%, 100% {
			transform: scale(1);
			box-shadow: 
				0 0 30px rgba(59, 130, 246, 0.3),
				0 0 60px rgba(147, 51, 234, 0.2),
				inset 0 0 30px rgba(59, 130, 246, 0.1);
		}
		50% {
			transform: scale(1.05);
			box-shadow: 
				0 0 40px rgba(59, 130, 246, 0.4),
				0 0 80px rgba(147, 51, 234, 0.3),
				inset 0 0 40px rgba(59, 130, 246, 0.15);
		}
	}
	
	.mascot-eyes {
		display: flex;
		gap: 20px;
		margin-bottom: 15px;
		animation: mascot-sway 6s ease-in-out infinite;
	}
	
	@keyframes mascot-sway {
		0%, 100% {
			transform: translateX(0) rotate(0deg);
		}
		25% {
			transform: translateX(-3px) rotate(-2deg);
		}
		50% {
			transform: translateX(0) rotate(0deg);
		}
		75% {
			transform: translateX(3px) rotate(2deg);
		}
	}
	
	.mascot-eye {
		width: 24px;
		height: 32px;
		background: rgba(255, 255, 255, 0.9);
		border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
		position: relative;
		overflow: hidden;
		animation: mascot-blink 4s ease-in-out infinite;
	}
	
	@keyframes mascot-blink {
		0%, 45%, 55%, 100% {
			height: 32px;
			border-radius: 50% 50% 50% 50% / 60% 60% 40% 40%;
		}
		48%, 52% {
			height: 2px;
			border-radius: 50% 50% 50% 50% / 50% 50% 50% 50%;
		}
	}
	
	.mascot-pupil {
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-50%, -50%);
		width: 12px;
		height: 12px;
		background: linear-gradient(135deg, #3B82F6, #9333EA);
		border-radius: 50%;
		box-shadow: 0 0 8px rgba(59, 130, 246, 0.6);
		animation: mascot-pupil-move 8s ease-in-out infinite;
	}
	
	@keyframes mascot-pupil-move {
		0%, 100% {
			transform: translate(-50%, -50%);
		}
		25% {
			transform: translate(-45%, -55%);
		}
		50% {
			transform: translate(-50%, -50%);
		}
		75% {
			transform: translate(-55%, -45%);
		}
	}
	
	.mascot-mouth {
		width: 40px;
		height: 20px;
		border: 3px solid rgba(255, 255, 255, 0.8);
		border-top: none;
		border-radius: 0 0 40px 40px;
		margin-top: 5px;
		animation: mascot-smile 5s ease-in-out infinite;
	}
	
	@keyframes mascot-smile {
		0%, 100% {
			width: 40px;
			height: 20px;
		}
		50% {
			width: 45px;
			height: 22px;
		}
	}
	
	.mascot-glow-ring {
		position: absolute;
		border-radius: 50%;
		border: 1px solid;
		pointer-events: none;
	}
	
	.mascot-glow-ring.ring-1 {
		width: 120%;
		height: 120%;
		top: -10%;
		left: -10%;
		border-color: rgba(59, 130, 246, 0.2);
		animation: mascot-ring-pulse 3s ease-in-out infinite;
	}
	
	.mascot-glow-ring.ring-2 {
		width: 140%;
		height: 140%;
		top: -20%;
		left: -20%;
		border-color: rgba(147, 51, 234, 0.15);
		animation: mascot-ring-pulse 4s ease-in-out infinite;
		animation-delay: 0.5s;
	}
	
	.mascot-glow-ring.ring-3 {
		width: 160%;
		height: 160%;
		top: -30%;
		left: -30%;
		border-color: rgba(59, 130, 246, 0.1);
		animation: mascot-ring-pulse 5s ease-in-out infinite;
		animation-delay: 1s;
	}
	
	@keyframes mascot-ring-pulse {
		0%, 100% {
			opacity: 0.3;
			transform: scale(1);
		}
		50% {
			opacity: 0.6;
			transform: scale(1.1);
		}
	}
	
	@media (max-width: 640px) {
		.mascot-container {
			width: 150px;
			height: 150px;
		}
		
		.mascot-eye {
			width: 18px;
			height: 24px;
		}
		
		.mascot-pupil {
			width: 9px;
			height: 9px;
		}
		
		.mascot-mouth {
			width: 30px;
			height: 15px;
		}
	}
	
	/* Glow pulse animation */
	@keyframes glowPulse {
		0%, 100% {
			opacity: 0.5;
			box-shadow: 0 0 20px rgba(59, 130, 246, 0.3), 0 0 40px rgba(147, 51, 234, 0.2);
		}
		50% {
			opacity: 1;
			box-shadow: 0 0 30px rgba(59, 130, 246, 0.6), 0 0 60px rgba(147, 51, 234, 0.4);
		}
	}
	
	/* Shimmer effect for gradients */
	@keyframes shimmer {
		0% {
			background-position: -200% 0;
		}
		100% {
			background-position: 200% 0;
		}
	}
	
	/* Smooth scroll reveal */
	section {
		scroll-margin-top: 80px;
	}
	
	/* Custom scrollbar for dark theme */
	::-webkit-scrollbar {
		width: 10px;
	}
	
	::-webkit-scrollbar-track {
		background: #0a0a0a;
	}
	
	::-webkit-scrollbar-thumb {
		background: linear-gradient(to bottom, #3b82f6, #9333ea);
		border-radius: 5px;
	}
	
	::-webkit-scrollbar-thumb:hover {
		background: linear-gradient(to bottom, #60a5fa, #a855f7);
	}
	
	.text-auravo { color: #5e68ff; } /* Placeholder auravo brand color */
	.bg-auravo { background-color: #5e68ff; }
	.bg-auravo\/5 { background-color: #5e68ff0d; }
	.bg-auravo\/10 { background-color: #5e68ff1a; }
	.border-auravo\/50 { border-color: #5e68ff80; }
</style>

<script is:inline>
	// Scroll-triggered fade-in: only add 'visible' when section is in view.
	// Sections must already have class 'fade-in-on-scroll' in their markup (prevents hydration mismatch).
	// Run after hydration so we don't add 'visible' before React attaches.
	(function() {
		const observerOptions = { threshold: 0.1 };
		const observer = new IntersectionObserver(function(entries) {
			entries.forEach(function(entry) {
				if (entry.isIntersecting) entry.target.classList.add('visible');
			});
		}, observerOptions);
		function observeSections() {
			document.querySelectorAll('section.fade-in-on-scroll').forEach(function(section) {
				observer.observe(section);
			});
		}
		if (document.readyState === 'loading') {
			document.addEventListener('DOMContentLoaded', function() {
				setTimeout(observeSections, 0);
			});
		} else {
			setTimeout(observeSections, 0);
		}
	})();
</script>